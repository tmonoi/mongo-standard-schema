{
  "name": "safe-mongo-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Type-safe MongoDB client library with support for multiple validation libraries",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "biome format --write .",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "keywords": [
    "mongodb",
    "typescript",
    "schema",
    "validation",
    "zod",
    "valibot",
    "type-safe",
    "database"
  ],
  "author": "tmonoi",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tmonoi/safe-mongo.git"
  },
  "bugs": {
    "url": "https://github.com/tmonoi/safe-mongo/issues"
  },
  "homepage": "https://github.com/tmonoi/safe-mongo#readme",
  "packageManager": "pnpm@10.12.4"
}
