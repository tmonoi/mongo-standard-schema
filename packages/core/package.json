{
  "name": "@safe-mongo/core",
  "version": "1.0.0",
  "description": "Core functionality for type-safe MongoDB client library",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && tsup && tsc -p tsconfig.build.json --emitDeclarationOnly --declaration",
    "dev": "concurrently \"tsup --watch\" \"tsc -p tsconfig.build.json --emitDeclarationOnly --declaration --watch\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "typecheck": "tsc --noEmit",
    "clean:all": "pnpm run clean && rm -rf node_modules .turbo",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mongodb",
    "typescript",
    "schema",
    "validation",
    "type-safe",
    "database"
  ],
  "author": "tmonoi",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "mongodb": "^5.0.0 || ^6.0.0"
  },
  "devDependencies": {
    "@safe-mongo/tsconfig": "workspace:*",
    "@biomejs/biome": "^1.4.1",
    "@types/node": "^20.10.0",
    "concurrently": "^9.1.0",
    "mongodb": "^6.3.0",
    "mongodb-memory-server": "^9.1.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tmonoi/safe-mongo.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/tmonoi/safe-mongo/issues"
  },
  "homepage": "https://github.com/tmonoi/safe-mongo#readme"
}
